<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/standard_spacing"
    android:paddingEnd="@dimen/standard_spacing"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/row_tier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/row_swap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/row_buy_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.divider.HorizontalDividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.tablerow.DefaultTableRowView
                android:id="@+id/row_rewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.blockchain.componentlib.button.PrimaryButtonView
                android:id="@+id/cta_button"
                android:layout_margin="@dimen/standard_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>